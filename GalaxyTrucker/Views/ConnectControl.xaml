<UserControl x:Class="GalaxyTrucker.Views.ConnectControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyTrucker.Views"
             xmlns:utils="clr-namespace:GalaxyTrucker.Views.Utils"
             xmlns:model="clr-namespace:GalaxyTrucker.Model"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" VerticalAlignment="Center">
            <MenuItem Header="Vissza a menübe" Margin="5" Command="{Binding BackToMenuCommand}"/>
        </Menu>
        <Label Grid.Row="1" Grid.Column="0" FontSize="15" Margin="2" Target="{Binding ElementName=nameTextBox}"
               VerticalAlignment="Center" HorizontalAlignment="Center">Játékos neve</Label>
        <TextBox Style="{StaticResource TextBoxInError}" Grid.Row="2" Grid.Column="0" Name="nameTextBox" Margin="10">
            <TextBox.Text>
                <Binding Path="PlayerName" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <utils:PlayerNameValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Label Grid.Row="1" Grid.Column="1" FontSize="15" Margin="2" Target="{Binding ElementName=remoteIpTextBox}"
               VerticalAlignment="Center" HorizontalAlignment="Center">Távoli ip cím</Label>
        <TextBox Style="{StaticResource TextBoxInError}" Grid.Row="2" Grid.Column="1" Name="remoteIpTextBox" Margin="10">
            <TextBox.Text>
                <Binding Path="RemoteIp" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <utils:RemoteIpValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <Label Grid.Row="1" Grid.Column="2" FontSize="15" Margin="2" Target="{Binding ElementName=remotePortTextBox}"
               VerticalAlignment="Center" HorizontalAlignment="Center">Távoli port(1024-65535)</Label>
        <TextBox Style="{StaticResource TextBoxInError}" Grid.Row="2" Grid.Column="2" Name="remotePortTextBox" Margin="10">
            <TextBox.Text>
                <Binding Path="RemotePort" UpdateSourceTrigger="PropertyChanged">
                    <Binding.ValidationRules>
                        <utils:RemotePortValidationRule/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBox.Text>
        </TextBox>

        <local:PlayerListControl DataContext="{Binding PlayerList}" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"/>

        <Label Content="Hajó alaprajza" Target="{Binding ElementName=layoutComboBox}" Margin="10" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Label.Style>
                <Style TargetType="Label">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding SelectedGameStage}" Value="{x:Static model:GameStage.Third}"/>
                                <Condition Binding="{Binding IsConnected}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Label.Style>
        </Label>
        <ComboBox Name="layoutComboBox" Grid.Row="3" Grid.Column="2" Margin="5 40 5 0" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150"
                  ItemsSource="{Binding LayoutOptions}"
                  SelectedItem="{Binding SelectedLayout}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=., Converter={StaticResource EnumConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
            <ComboBox.Style>
                <Style TargetType="ComboBox">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding SelectedGameStage}" Value="{x:Static model:GameStage.Third}"/>
                                <Condition Binding="{Binding IsConnected}" Value="True"/>
                            </MultiDataTrigger.Conditions>
                            <MultiDataTrigger.Setters>
                                <Setter Property="Visibility" Value="Visible"/>
                            </MultiDataTrigger.Setters>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </ComboBox.Style>
        </ComboBox>

        <TextBlock Margin="10" Grid.Row="4" Grid.Column="1" TextWrapping="Wrap" Grid.ColumnSpan="2" Text="{Binding Error}"></TextBlock>
        <Button Width="100"  Height="30" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,45"
                Command="{Binding ConnectCommand}" Content="Csatlakozás">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="IsEnabled" Value="False"/>
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=nameTextBox}" Value="False"/>
                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=remoteIpTextBox}" Value="False"/>
                                <Condition Binding="{Binding Path=(Validation.HasError), ElementName=remotePortTextBox}" Value="False"/>
                            </MultiDataTrigger.Conditions>
                            <Setter Property="IsEnabled" Value="True"/>
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button Height="30" Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10"
                IsEnabled="{Binding IsConnected}" Command="{Binding ReadyCommand}" Width="100" Content="Készenlét állítása"/>
        <TextBlock Margin="10" Grid.Row="4" Grid.Column="0" Text="{Binding ConnectionStatus}"></TextBlock>
    </Grid>
</UserControl>
