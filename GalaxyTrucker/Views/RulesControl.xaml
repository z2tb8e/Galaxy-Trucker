<UserControl x:Class="GalaxyTrucker.Views.RulesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GalaxyTrucker.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock TextAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
            Az egyetlen szabály, hogy nincs szabály
        </TextBlock>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10" Grid.Column="0" Grid.Row="2"
                Content="Vissza a menübe" Width="120" Height="30" Click="Menu_Click"/>
    </Grid>
</UserControl>
